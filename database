import sqlite3

class DatabaseManager:
    def __init__(self, db_name="user_performance.db"):
        self.db_name = db_name
        self.conn = sqlite3.connect(self.db_name)
        self.cursor = self.conn.cursor()
        self.create_table()

    def create_table(self):
        self.cursor.execute("""
            CREATE TABLE IF NOT EXISTS performance (
                user_id TEXT,
                grid_size INTEGER,
                completion_time REAL,
                mistakes INTEGER,
                difficult_numbers TEXT,
                timestamp DATETIME DEFAULT CURRENT_TIMESTAMP
            )
        """)
        self.conn.commit()

    def insert_performance(self, user_id, grid_size, completion_time, mistakes, difficult_numbers):
        difficult_numbers_str = ",".join(map(str, difficult_numbers))
        self.cursor.execute("""
            INSERT INTO performance (user_id, grid_size, completion_time, mistakes, difficult_numbers)
            VALUES (?, ?, ?, ?, ?)
        """, (user_id, grid_size, completion_time, mistakes, difficult_numbers_str))
        self.conn.commit()

    def get_user_difficult_numbers(self, user_id):
        self.cursor.execute("""
            SELECT difficult_numbers FROM performance
            WHERE user_id = ?
            ORDER BY timestamp DESC
            LIMIT 5
        """, (user_id,))
        rows = self.cursor.fetchall()
        numbers = []
        for row in rows:
            nums = row[0].split(",") if row[0] else []
            numbers.extend([int(n) for n in nums if n.isdigit()])
        return numbers

    def close(self):
        """Close database connection."""
        self.conn.close()
